//Exercício 6
db.clientes.aggregate([
  {
    $addFields: {
      idade: {
        $floor: {
          $divide: [
            { $subtract: ["$$NOW", "$dataNascimento"] },
            { $multiply: [86400000, 365]},
          ],
        },
      },
    },
  },
  {
    $lookup: {
      from: "vendas",
      localField: "clienteId",
      foreignField: "clienteId",
      as: "compras",
    },
  },
  {
    $match: {
      compras: {
        $elemMatch: {
          dataVenda: {
            $gt: new Date("2019-06-01"),
            $lt: new Date("2020-03-31"),
          },
        },
      },
    },
  },
  {
    $unwind: "$compras",
  },
  {
    $group: {
      _id: "$endereco.uf",
      totalCompras: { $sum: 1 },
    },
  },
  {
    $sort: { totalCompras: -1 },
  },
  {
    $limit: 5,
  },
])
.pretty();